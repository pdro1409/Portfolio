<header class="bg-transparent text-white p-4 flex justify-between items-center">
  <a href="#" class="text-2xl font-bold">Pedro.dev</a>

  <div class="relative md:hidden">
    <button id="menu-button" class="focus:outline-none text-2xl"> ☰ </button>

    <nav
      id="dropdown-menu"
      class="absolute right-0 mt-2 w-40 bg-[#5a3e9e] rounded shadow-lg hidden flex-col"
    >
      <a
        href="#home"
        class="px-4 py-2 hover:bg-[#7c63b8] hover:rounded-md block">Início</a
      >
      <a
        href="#about"
        class="px-4 py-2 hover:bg-[#7c63b8] hover:rounded-md block">Sobre mim</a
      >
      <a
        href="#contact"
        class="px-4 py-2 hover:bg-[#7c63b8] hover:rounded-md block">Contato</a
      >
      <a
        href="#projects"
        class="px-4 py-2 hover:bg-[#7c63b8] hover:rounded-md block">Projetos</a
      >
      <a
        href="#skills"
        class="px-4 py-2 hover:bg-[#7c63b8] hover:rounded-md block">Skills</a

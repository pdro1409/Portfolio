      <a href="#" class="px-4 py-2 hover:bg-[#7c63b8] hover:rounded-md block"
        >Contato</a
      >
    </nav>
  </div>

  <!-- Menu Desktop -->
  <nav class="hidden md:flex gap-6">
    <a
      href="#home"
      class="font-medium pb-1 relative underline-animate hover:text-gray-400"
      >Início</a
    >
    <a
      href="#about"
      class="font-medium pb-1 relative underline-animate hover:text-gray-400"
